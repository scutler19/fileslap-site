{
  "info": {
    "name": "FileSlap API",
    "description": "Convert HTML to PDF with our lightning-fast API. Turn web pages into pixel-perfect PDFs in seconds.",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://api.fileslap.com",
      "type": "string"
    },
    {
      "key": "apiKey",
      "value": "YOUR_API_KEY_HERE",
      "type": "string"
    }
  ],
  "auth": {
    "type": "apikey",
    "apikey": [
      {
        "key": "X-API-KEY",
        "value": "{{apiKey}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Convert HTML to PDF",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"html\": \"<h1>Hello World</h1><p>This is a test document generated by FileSlap API.</p>\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/convert",
          "host": ["{{baseUrl}}"],
          "path": ["api", "convert"]
        },
        "description": "Convert HTML content to a PDF file. The API returns the PDF directly as a binary response."
      },
      "response": []
    },
    {
      "name": "Convert Invoice Template",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"html\": \"<!DOCTYPE html><html><head><style>body{font-family:Arial,sans-serif;margin:40px;}table{width:100%;border-collapse:collapse;}th,td{padding:8px;text-align:left;border-bottom:1px solid #ddd;}</style></head><body><h1>Invoice</h1><table><tr><th>Item</th><th>Price</th></tr><tr><td>Service</td><td>$100</td></tr></table></body></html>\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/convert",
          "host": ["{{baseUrl}}"],
          "path": ["api", "convert"]
        },
        "description": "Convert a styled invoice template to PDF."
      },
      "response": []
    }
  ]
} 